# Development Dockerfile for Frontend with Hot Reloading
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Add package file
COPY package*.json ./

# Clear npm cache and install dependencies with better performance
RUN npm cache clean --force && \
    npm ci --only=development --silent --no-audit --no-fund

# Create a non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Change ownership of the app directory to nodejs user
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose port 3000
EXPOSE 3000

# Set environment variables for hot reloading
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true
ENV FAST_REFRESH=true

# Start the development server with hot reloading
CMD ["npm", "start"]
